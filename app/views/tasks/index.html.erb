<div class="container">
  <h1>All Tasks</h1>
  <%= link_to 'Create a new Task', new_task_path, :class => "btn btn-primary my-4"  %>

  <% @tasks.each do |task| %>
    <h5><%= link_to task.title, task_path(task) %></h5>
    <p><%= task.details %></p>
    <p><%= task.completed %></p>
  <% end %>
</div>